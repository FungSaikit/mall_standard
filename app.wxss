/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page {
  background-color: #eee;
}

.hidden {
  display: none !important;
}

.block {
  display: block;
  width: 100%;
  background-color: #fff;
  border-bottom: 1px solid lightgray;
  margin-top: 10rpx;
}

.block:after {
  content: '';
  display: block;
  clear: both;
}

.flex {
  display: flex;
  display: -webkit-flex;
}

.flex-grow {
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.blocktitle {
  padding: 10rpx;
  color: #f38200;
  background-color: #fff;
}

.placeholder {
  display: block;
  height: 3.2rem;
}

.placeholder_low {
  display: block;
  height: 2.5rem;
}

.orange_button {
  line-height: 3rem;
  height: 3rem;
  width: 100%;
  text-align: center;
  color: #fff;
  background-color: #f38200;
  margin-top: 1rem;
}

.line {
  background-color: #fff;
  height: 3rem;
  line-height: 3rem;
  width: 750rpx;
  margin-top: 0.5rem;
  border-bottom: 1px solid lightgray;
}

.title {
  margin: 0 0.5rem;
  width: 5rem;
}

.line input {
  width: 1rem;
  flex-grow: 1;
  height: 3rem;
  line-height: 3rem;
}

.order {
  margin-top: 0.2rem;
  background-color: #fff;
  border-bottom: 1px solid lightgray;
}

.order_top {
  color: dimgray;
  height: 2.5rem;
  line-height: 2.5rem;
  padding: 0 0.5rem;
}

.order_middle {
  border-top: 1px solid lightgray;
  border-bottom: 1px solid lightgray;
  display: flex;
  display: -webkit-flex;
}

.order_middle_info {
  padding: 0.5rem 0.5rem 0.5rem 0;
}

.order_middle_pic {
  margin: 0.5rem;
  height: 6rem;
  width: 6rem;
}

.product_title {
  color: dimgray;
  height: 2.5rem;
  line-height: 1.25rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  vertical-align: middle;
  white-space: normal;
  word-break: break-all;
}

.product_spec {
  color: gray;
  font-size: 0.8rem;
  height: 2rem;
  line-height: 2rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product_price_number {
  height: 1.5rem;
  line-height: 1.5rem;
  color: #f38200;
  display: flex;
  display: -webkit-flex;
}

.product_price {
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.product_number {
  color: gray;
  font-size: 0.8rem;
}

.order_middle_info {
  width: 10rpx;
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.order_bottom {
  height: 3rem;
  line-height: 3rem;
}

.order_bottom_button {
  vertical-align: middle;
  float: right;
  height: 2rem;
  line-height: 2rem;
  width: 5rem;
  font-size: 0.8rem;
  text-align: center;
  border: 1px solid gray;
  color: gray;
  border-radius: 1rem;
  margin: 0.5rem;
}

.photo_frame {
  width: 5rem;
  height: 5rem;
  line-height: 5rem;
  text-align: center;
  margin: 0.5rem 0 0.5rem 0.5rem;
  display: inline-block;
  vertical-align: top;
}

.photo_frame image {
  vertical-align: middle;
  width: 5rem;
  height: 5rem;
}

.add_photo_frame {
  width: 5rem;
  height: 5rem;
  line-height: 5rem;
  text-align: center;
  margin: 0.5rem 0 0.5rem 0.5rem;
  display: inline-block;
  border: 1px dotted gray;
  vertical-align: top;
}

.add_photo_frame image {
  width: 2.5rem;
  height: 2.5rem;
  vertical-align: middle;
}

.top_tabs {
  width: 100%;
  height: 2.5rem;
  background-color: #fff;
  border-bottom: 1px solid lightgray;
  display: flex;
  display: -webkit-flex;
  text-align: center;
}

.top_tab {
  width: 1rem;
  flex-grow: 1;
  -webkit-flex-grow: 1;
  height: 2.4rem;
  line-height: 2.4rem;
}

.top_tab_selected {
  color: #f38200;
  border-bottom: 0.1rem solid #f38200;
}