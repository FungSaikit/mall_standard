/* pages/wallet/wallet.wxss */
page {
  background-color: #fff;
}

.wallet_top {
  width: 750rpx;
  height: 7rem;
  background-color: #f38200;
  text-align: center;
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
}

.blocktitle {
  text-align: center;
  font-size: 0.8rem;
}

.money {
  height: 3rem;
  line-height: 3rem;
}

.wallet_top {
  color: white;
}

.nextbutton {
  height: 7rem;
  line-height: 7rem;
}

.nextbutton image {
  height: 3rem;
  width: 3rem;
  vertical-align: middle;
}

.wallet_top_content {
  flex-grow: 1;
  height: 7rem;
}

.integer {
  font-size: 1.5rem;
  display: inline-block;
}

.wallet_int {
  height: 2rem;
  line-height: 2rem;
}

.wallet_img {
  width: 1rem;
  height: 1rem;
  vertical-align: middle;
}

.wallet_underline {
  display: inline-block;
  text-decoration: underline;
  vertical-align: middle;
  margin-left: 0.2rem;
  font-size: 0.9rem;
}

.select_classes {
  width: 100%;
  height: 2.5rem;
  line-height: 2.5rem;
  display: flex;
  position: fixed;
  top: 7rem;
  left: 0;
  border-top: 1px solid #fff;
  background-color: #f38200;
  color: white;
}

.select_class {
  width: 0;
  flex-grow: 1;
  text-align: center;
  font-size: 0.8rem;
}

.select_class_selected {
  font-size: 1rem;
  font-weight: bold;
}

.list_item {
  width: 100%;
  border-bottom: 1px solid lightgray;
}

.item_top {
  width: 100%;
  display: flex;
  display: -webkit-flex;
  height: 2rem;
  line-height: 2rem;
}

.item_bottom {
  width: 100%;
  display: flex;
  display: -webkit-flex;
  font-size: 0.8rem;
  color: gray;
  height: 1.5rem;
  line-height: 1.5rem;
}

.item_price {
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.money_origin {
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.status_success {
  color: green;
}

.status_waiting {
  color: orange;
}

.status_fail {
  color: red;
}