.searchbar {
  width: 100%;
  height: 2.15rem;
  background-color: #f38200;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}

.sortsearch {
  width: 1.8rem;
  height: 1.8rem;
  padding: 0 0.5rem 0.35rem 0.5rem;
}

.search_input {
  height: 1.8rem;
  padding: 0 0.5rem;
  margin: 0 0 0.35rem 0;
  flex-grow: 1;
  border-radius: 1rem;
  background-color: #fff;
}

.placeholder {
  height: 100rpx;
}

.searchbutton {
  height: 50rpx;
  width: 100rpx;
  text-align: center;
  border-left: 1rpx lightgray solid;
}

.indexswiper {
  width: 100%;
  height: 200rpx;
}

.slide-image {
  width: 100%;
}

.topline {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  white-space: nowrap;
  font-size: 0.8rem;
}

.topline_title {
  color: red;
  padding: 0 10rpx;
  font-weight: bold;
}

.topline_content {
  color: dimgray;
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.classification {
  padding-bottom: 0.5rem;
}

.classification:after {
  content: '';
  display: block;
  clear: both;
}

.class {
  width: 20%;
  float: left;
  text-align: center;
  margin-top: 0.5rem;
}

.class_img {
  width: 100rpx;
  height: 100rpx;
}

.class_title {
  font-size: 0.8rem;
  color: gray;
}

.hotsale_scroll {
  width: 750rpx;
  white-space: nowrap;
}

.hotsale_goods {
  width: 240rpx;
  height: auto;
  background-color: #fff;
  margin: 10rpx 7rpx;
  display: inline-block;
  border-radius: 0.2rem;
}

.hotsale_img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 0.2rem;
}

.goods_info {
  padding: 5rpx;
}

.goods_title {
  height: 2.4rem;
  line-height: 1.2rem;
  font-size: 0.8rem;
  color: #646464;
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_spec {
  font-size: 0.7rem;
  height: 1rem;
  line-height: 1rem;
  color: gray;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods_price {
  color: #f38200;
  font-size: 0.9rem;
}

.webview {
  width: 750rpx;
  height: 1000rpx;
}

.hotsale_swiper {
  height: 460rpx;
}

.goods_in2 {
  width: 360rpx;
  margin: 10rpx 0 0 10rpx;
  float: left;
  background-color: #fff;
  border-radius: 0.2rem;
}

.goods_in2 .hotsale_img {
  width: 360rpx;
  height: 360rpx;
}

.guessyoulike_show {
  background-color: #f9f9f9; 
}

.guessyoulike_show::after {
  content: '';
  display: block;
  clear: both;
}

.goods_in2 .goods_info {
  padding: 10rpx;
}

.goods_in2 .goods_title{
  font-size: 1rem;
  height: 2.8rem;
  line-height: 1.4rem;
}

.goods_in2 .goods_spec {
  height: 1.2rem;
  font-size: 0.8rem;
}

.goods_in2 .goods_price {
  font-size: 1rem;
  height: 1.4rem;
  line-height: 1.4rem;
}