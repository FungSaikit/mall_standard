.block_title {
  display: block;
  width: 100%;
  text-align: center;
  color: gray;
  background-color: #fff;
}

.placeholder {
  height: 100rpx;
}

.searchbar_view {
  background: #f38200;
  z-index: 100;
  padding: 20rpx 0;
  /* position: fixed;
  top: 0; */
  width: 100%;
}

.searchbar {
  display: flex;
  background: #fff;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  margin: 0 10px;
}

.searchimg {
  height: 50rpx;
  width: 50rpx;
}

.searchinput {
  flex-grow: 1;
  margin: 0;
  padding: 0;
  height: 50rpx;
  font-size: 40rpx;
}

.searchbutton {
  height: 50rpx;
  width: 100rpx;
  text-align: center;
  border-left: 1rpx lightgray solid;
}

.indexswiper {
  width: 100%;
  height: 200rpx;
}

.slide-image {
  width: 100%;
}

.topline {
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  white-space: nowrap;
  font-size: 0.8rem;
}

.topline_title {
  color: red;
  padding: 0 10rpx;
  font-weight: bold;
}

.topline_content {
  color: dimgray;
  flex-grow: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}

.classification {
  padding-bottom: 0.5rem;
}

.classification:after {
  content: '';
  display: block;
  clear: both;
}

.class {
  width: 20%;
  float: left;
  text-align: center;
  margin-top: 0.5rem;
}

.class_img {
  width: 100rpx;
  height: 100rpx;
}

.class_title {
  font-size: 0.8rem;
  color: gray;
}

.hotsale_scroll {
  width: 750rpx;
  white-space: nowrap;
}

.hotsale_goods {
  width: 240rpx;
  height: auto;
  background-color: #fff;
  margin: 10rpx 5rpx;
  display: inline-block;
  border-radius: 0.2rem;
}

.hotsale_img {
  width: 240rpx;
  height: 240rpx;
  border-radius: 0.2rem
}

.goods_info {
  padding: 5rpx;
}

.goods_title {
  font-size: 0.8rem;
  color: #646464;
  white-space: normal;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goods_spec {
  font-size: 0.8rem;
  color: gray;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.goods_price {
  color: #f38200;
  font-size: 0.9rem;
}

.webview {
  width: 750rpx;
  height: 1000rpx;
}

.hotsale_swiper {
  height: 460rpx;
}