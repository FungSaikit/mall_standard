.placeholder {
  height: 110rpx;
}

.searchbar_view {
  background: #f38200;
  z-index: 100;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  width: 100%;
}
.searchbar {
  display: flex;
  background: #fff;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  margin: 0 10px;
}

.searchimg {
  height: 50rpx;
  width: 50rpx;
}

.searchinput {
  flex-grow: 1;
  margin: 0;
  padding: 0;
  height: 50rpx;
  font-size: 40rpx;
}

.searchbutton {
  height: 50rpx;
  width: 100rpx;
  text-align: center;
  border-left: 1rpx lightgray solid;
}

.indexswiper {
  width: 100%;
  height: 200rpx;
}

.slide-image {
  width: 100%;
}
