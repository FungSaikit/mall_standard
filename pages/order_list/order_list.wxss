/* pages/order_list/order_list.wxss */

.searchbar {
  width: 100%;
  height: 2rem;
  background-color: #f38200;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
}

.search_input {
  flex-grow: 1;
  background-color: #fff;
  height: 90%;
  border-radius: 1rem;
  padding: 0 1rem;
  margin-left: 0.5rem;
  line-height: 1.8rem;
}

.search_button {
  color: #fff;
  padding: 0 0.5rem;
  line-height: 1.8rem;
}

.classificationbar {
  width: 100%;
  height: 2.5rem;
  background-color: #fff;
  position: fixed;
  top: 2rem;
  left: 0;
  text-align: center;
  white-space: nowrap;
  overflow: scroll;
  border-bottom: 1px solid lightgray;
}

.class {
  padding: 0 0.5rem;
  height: 2.4rem;
  line-height: 2.4rem;
  border-bottom: 0.1rem solid #fff;
  color: dimgray;
  display: inline-block;
}

.class_selected {
  color: #f38200;
  border-bottom-color: #f38200;
}

.placeholder_top {
  display: block;
  height: 4.5rem;
}


