/* pages/order_list/order_list.wxss */

.searchbar {
  width: 100%;
  height: 2rem;
  background-color: #f38200;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
}

.search_input {
  flex-grow: 1;
  background-color: #fff;
  height: 90%;
  border-radius: 1rem;
  padding: 0 1rem;
  margin-left: 0.5rem;
  line-height: 1.8rem;
}

.search_button {
  color: #fff;
  padding: 0 0.5rem;
  line-height: 1.8rem;
}

.classificationbar {
  width: 100%;
  height: 2.5rem;
  background-color: #fff;
  position: fixed;
  top: 2rem;
  left: 0;
  text-align: center;
  white-space: nowrap;
  overflow: scroll;
  border-bottom: 1px solid lightgray;
}

.class {
  padding: 0 0.5rem;
  height: 2.4rem;
  line-height: 2.4rem;
  border-bottom: 0.1rem solid #fff;
  color: dimgray;
  display: inline-block;
}

.class_selected {
  color: #f38200;
  border-bottom-color: #f38200;
}

.placeholder_top {
  display: block;
  height: 4.5rem;
}

.order {
  margin-top: 0.2rem;
  background-color: #fff;
  border-bottom: 1px solid lightgray;
}

.order_top {
  color: dimgray;
  height: 2.5rem;
  line-height: 2.5rem;
  padding: 0 0.5rem;
}

.order_middle {
  border-top: 1px solid lightgray;
  border-bottom: 1px solid lightgray;
  display: flex;
  display: -webkit-flex;
}

.order_middle_info {
  padding: 0.5rem 0.5rem 0.5rem 0;
}

.order_middle_pic {
  margin: 0.5rem;
  height: 6rem;
  width: 6rem;
}

.product_title {
  color: dimgray;
  height: 2.5rem;
  line-height: 1.25rem;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  vertical-align: middle;
  white-space: normal;
  word-break: break-all;
}

.product_spec {
  color: gray;
  font-size: 0.8rem;
  height: 2rem;
  line-height: 2rem;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.product_price_number {
  height: 1.5rem;
  line-height: 1.5rem;
  color: #f38200;
  display: flex;
  display: -webkit-flex;
}

.product_price {
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.product_number {
  color: gray;
  font-size: 0.8rem;
}

.order_middle_info {
  width: 10rpx;
  flex-grow: 1;
  -webkit-flex-grow: 1;
}

.order_bottom {
  height: 3rem;
  line-height: 3rem;
}

.order_bottom_button {
  vertical-align: middle;
  float: right;
  height: 2rem;
  line-height: 2rem;
  width: 5rem;
  font-size: 0.8rem;
  text-align: center;
  border: 1px solid gray;
  color: gray;
  border-radius: 1rem;
  margin: 0.5rem;
}
