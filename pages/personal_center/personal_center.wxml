<view class='body'>
  <view class='personalcenter_top'>
    <image class='bg' src='/images/personalCenter/background.jpg'></image>
    <image class='usericon' src='{{usericon}}'></image>
    <view class='username'>{{username}}</view>
  </view>

  <view class='block'>
    <view class='blocktitle'>我的订单</view>
    <view class='blockline flex'>
      <view class='menu_item' data-status='1' data-ismine='1' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/waitforpay.png'></image>
        <view class='menu_title'>待付款</view>
      </view>
      <view class='menu_item' data-status='2' data-ismine='1' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/waitforpost.png'></image>
        <view class='menu_title'>待发货</view>
      </view>
      <view class='menu_item' data-status='3' data-ismine='1' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/completed.png'></image>
        <view class='menu_title'>待收货</view>
      </view>
      <view class='menu_item' style='border-right: 0;' data-status='7' data-ismine='1' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/return.png'></image>
        <view class='menu_title'>退款/退货</view>
      </view>
    </view>
  </view>
  <view class='block'>
    <view class='blocktitle'>客户订单</view>
    <view class='blockline flex'>
      <view class='menu_item' data-status='1' data-ismine='0' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/waitforpay.png'></image>
        <view class='menu_title'>待付款</view>
      </view>
      <view class='menu_item' data-status='2' data-ismine='0' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/waitforpost.png'></image>
        <view class='menu_title'>待发货</view>
      </view>
      <view class='menu_item' data-status='3' data-ismine='0' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/completed.png'></image>
        <view class='menu_title'>待收货</view>
      </view>
      <view class='menu_item' style='border-right: 0;' data-status='7' data-ismine='0' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/return.png'></image>
        <view class='menu_title'>退款/退货</view>
      </view>
    </view>
  </view>
  <view class='block' style='margin-bottom: 0.2rem;'>
    <view class='blocktitle'>其他功能</view>
    <view class='blockline flex'>
      <view class='menu_item' bindtap='addressManagement'>
        <image class='menu_img' src='/images/personalCenter/addressmanagement.png'></image>
        <view class='menu_title'>地址管理</view>
      </view>
      <view class='menu_item' bindtap='orderList'>
        <image class='menu_img' src='/images/personalCenter/mywallet.png'></image>
        <view class='menu_title'>我的钱包</view>
      </view>
      <view class='menu_item' bindtap='serviceList'>
        <image class='menu_img' src='/images/personalCenter/servicelist.png'></image>
        <view class='menu_title'>售后列表</view>
      </view>
      <view class='menu_item' style='border-right: 0;' bindtap='feedback'>
        <image class='menu_img' src='/images/personalCenter/feedback.png'></image>
        <view class='menu_title'>服务反馈</view>
      </view>
    </view>
    <view class='blockline flex'>
      <view class='menu_item'>
        <image class='menu_img' src='/images/personalCenter/clientlist.png'></image>
        <view class='menu_title'>客户列表</view>
      </view>
      <view class='menu_item' style='border-right-color: #fff;'>
        <!-- <image class='menu_img' src='/images/personalCenter/clientmessage.png'></image>
        <view class='menu_title'>客户消息</view> -->
      </view>
      <view class='menu_item' style='border-right-color: #fff;'></view>
      <view class='menu_item' style='border-right: 0;'></view>
    </view>
  </view>
