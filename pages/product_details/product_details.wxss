/* pages/product_details/product_details.wxss */

.topbar {
  width: 750rpx;
  height: 2.5rem;
  line-height: 2.4rem;
  position: fixed;
  top: 0;
  left: 0;
  border-bottom: 1px solid lightgray;
  background-color: rgba(255, 255, 255, 0.99);
  z-index: 10;
  font-size: 0.8rem;
  display: flex;
  display: -webkit-flex;
  color: gray;
}

.topbar view {
  width: 0rem;
  flex-grow: 1;
  -webkit-flex-grow: 1;
  height: 2.4rem;
  border-bottom: 0.1rem solid #fff;
  text-align: center;
}

.topbar_selected {
  color: #FF0036;
  border-bottom-color: #FF0036 !important;
}

#page0 {
  margin-top: 0;
}

.product_pic {
  width: 750rpx;
  height: 750rpx;
  font-size: 0;
}

swiper-item {
  font-size: 0;
}

.product_pic image {
  width: 750rpx;
  height: 750rpx;
}

.product_info {
  padding: 0.5rem;
}

.product_title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  vertical-align: middle;
  white-space: normal;
  word-break: break-all;
  color: #646464;
  margin-bottom: 0.5rem;
}

.product_spec {
  font-size: 0.8rem;
  color: gray;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  margin-bottom: 0.5rem;
}

.price {
  color: #f38200;
  font-size: 1.2rem;
}

.salenumber {
  color: gray;
  font-size: 0.8rem;
}

.spec {
  width: 47%;
  margin: 0 0 0.5rem 2%;
  border: 1px solid #646464;
  border-radius: 0.2rem;
  font-size: 0.8rem;
  color: #646464;
  float: left;
  height: 2.5rem;
  line-height: 2.5rem;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.spec_selected {
  color: #f38200;
  background-color: #fff;
  border-color: #f38200;
}

#page1 {
  height: auto;
  min-height: 1000rpx;
}

.table_r {
  height: 3rem;
  line-height: 3rem;
  display: flex;
  border-bottom: 1px solid lightgray;
}

.table_h {
  width: 200rpx;
  font-weight: bold;
  text-align: center;
  font-size: 1rem;
  color: dimgray;
  margin-right: 0.5rem;
}

.table_d {
  flex-grow: 1;
  color: gray;
  font-size: 1rem;
}

.blocktitle {
  font-size: 1.2rem;
  font-weight: bold;
  color: #646464;
  border-bottom: 1px solid gray;
  margin-bottom: 0.5rem;
}

.bottombar {
  line-height: 3rem;
  height: 3rem;
  width: 100%;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 1px solid lightgray;
  display: flex;
  text-align: center;
  color: gray;
}

#page2 {
  min-height: 1000rpx;
}

#page2 image {
  width: 750rpx;
}
